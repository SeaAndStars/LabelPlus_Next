<u:UrsaWindow
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:views="clr-namespace:LabelPlus_Next.UpdateClient"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="LabelPlus_Next.UpdateClient.Views.MainWindow"
    Icon="/Assets/avalonia-logo.ico"
    Width="800" Height="450"
    WindowStartupLocation="CenterScreen"
    Title="General Update ">
	<u:UrsaWindow.RightContent>
		<StackPanel Orientation="Horizontal">
			<u:ThemeToggleButton
                Padding="8"
                IsThreeState="True"
                Mode="Controller">
				<u:ThemeToggleButton.Styles>
					<Style Selector="u|ThemeToggleButton /template/ PathIcon#PART_Icon">
						<Setter Property="Theme" Value="{StaticResource InnerPathIcon}" />
					</Style>
				</u:ThemeToggleButton.Styles>
			</u:ThemeToggleButton>
		</StackPanel>
	</u:UrsaWindow.RightContent>
	<views:MainView />
</u:UrsaWindow>