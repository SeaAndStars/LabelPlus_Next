<u:UrsaWindow
    x:Class="LabelPlus_Next.Views.Windows.UploadSettingsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:LabelPlus_Next.ViewModels"
    Title="上传设置"
    Width="420"
    Height="280"
    x:DataType="vm:UploadSettingsViewModel">
    <StackPanel Margin="16" Spacing="10">
        <TextBlock Text="服务器地址 (BaseUrl)" />
        <TextBox Text="{Binding BaseUrl, Mode=TwoWay}" />
        <TextBlock Text="用户名" />
        <TextBox Text="{Binding Username, Mode=TwoWay}" />
        <TextBlock Text="密码" />
        <TextBox Text="{Binding Password, Mode=TwoWay}" />
        <StackPanel
            Margin="0,10,0,0"
            Orientation="Horizontal"
            Spacing="8">
            <Button Command="{Binding SaveCommand}" Content="保存" />
            <Button Content="保存并刷新" Click="OnSaveAndRefreshClick" />
            <Button Content="关闭" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</u:UrsaWindow>